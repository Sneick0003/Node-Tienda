<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Showcase</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }
        .container {
            display: flex;
            height: 100%;
            background-color: #f0f0f0;
            padding: 16px;
            box-sizing: border-box;
        }
        .sidebar-placeholder {
            width: 64px;
        }
        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            margin-left: 16px;
        }
        .header {
            height: 48px;
            background-color: #e0e0e0;
            border-radius: 16px 16px 0 0;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            padding: 0 16px;
        }
        .header-button {
            width: 24px;
            height: 24px;
            background-color: #c0c0c0;
            border-radius: 50%;
            margin-right: 16px;
        }
        .header-search {
            width: 192px;
            height: 24px;
            background-color: #c0c0c0;
            border-radius: 12px;
            margin-left: auto;
        }
        .content {
            flex: 1;
            background-color: #e0e0e0;
            border-radius: 16px;
            padding: 16px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 16px;
            overflow-y: auto;
        }
        .product {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 8px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .product-image {
            width: 100px;
            height: 100px;
            background-color: #c0c0c0;
            border-radius: 4px;
            margin-bottom: 8px;
        }
        .product-name {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 4px;
        }
        .product-price {
            font-size: 13px;
            color: #666;
        }
        .bottom-section {
            height: 64px;
            background-color: #e0e0e0;
            border-radius: 16px;
            margin-top: 16px;
            padding: 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .cart-info {
            display: flex;
            align-items: center;
        }
        .cart-icon {
            width: 32px;
            height: 32px;
            background-color: #c0c0c0;
            border-radius: 50%;
            margin-right: 8px;
        }
        .checkout-button {
            padding: 8px 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .right-sidebar {
            width: 192px;
            margin-left: 16px;
        }
        .right-top, .right-bottom {
            background-color: #e0e0e0;
            border-radius: 16px;
            padding: 16px;
            margin-bottom: 16px;
        }
        .right-top {
            height: 160px;
        }
        .right-bottom {
            height: calc(100% - 192px);
        }
        h3 {
            font-size: 14px;
            margin: 0 0 8px 0;
        }
        .filter-option {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
        }
        .filter-checkbox {
            width: 16px;
            height: 16px;
            background-color: #c0c0c0;
            border-radius: 4px;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <%- include('../partials/header.ejs') %>

        <div class="sidebar-placeholder"></div>
        <div class="main-content">
            <div class="header">
                <div class="header-button"></div>
                <div class="header-button"></div>
                <div class="header-button"></div>
                <div class="header-search"></div>
            </div>
            <div class="content">
                <div class="product">
                    <div class="product-image"></div>
                    <div class="product-name">Product 1</div>
                    <div class="product-price">$19.99</div>
                </div>
                <div class="product">
                    <div class="product-image"></div>
                    <div class="product-name">Product 2</div>
                    <div class="product-price">$24.99</div>
                </div>
                <div class="product">
                    <div class="product-image"></div>
                    <div class="product-name">Product 3</div>
                    <div class="product-price">$14.99</div>
                </div>
                <div class="product">
                    <div class="product-image"></div>
                    <div class="product-name">Product 4</div>
                    <div class="product-price">$29.99</div>
                </div>
                <div class="product">
                    <div class="product-image"></div>
                    <div class="product-name">Product 5</div>
                    <div class="product-price">$39.99</div>
                </div>
                <div class="product">
                    <div class="product-image"></div>
                    <div class="product-name">Product 6</div>
                    <div class="product-price">$49.99</div>
                </div>
            </div>
            <div class="bottom-section">
                <div class="cart-info">
                    <div class="cart-icon"></div>
                    <span>3 items</span>
                </div>
                <button class="checkout-button">Checkout</button>
            </div>
        </div>
        <div class="right-sidebar">
            <div class="right-top">
                <h3>FEATURED PRODUCT</h3>
                <div class="product-image" style="width: 100%; height: 100px; margin-top: 0.5rem;"></div>
            </div>
            <div class="right-bottom">
                <h3>FILTER BY</h3>
                <div class="filter-option">
                    <div class="filter-checkbox"></div>
                    <span>Category 1</span>
                </div>
                <div class="filter-option">
                    <div class="filter-checkbox"></div>
                    <span>Category 2</span>
                </div>
                <div class="filter-option">
                    <div class="filter-checkbox"></div>
                    <span>Category 3</span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>